<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:divider="@drawable/line_h"
    app:showDividers="end">

    <TextView
        android:id="@+id/tv_name_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/color_22"
        android:textSize="14sp"
        tools:text="name 13520862956" />

    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/color_99"
        android:textSize="14sp"
        tools:text="address detail" />

    <View
        style="@style/line_i"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="6dp">

        <LinearLayout
            android:id="@+id/ll_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_default"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:src="@mipmap/ic_default_select" />

            <TextView
                android:id="@+id/tv_address_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/address_default"
                android:textColor="@color/color_66"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.markjin.artmall.view.TextViewPlus
                android:id="@+id/tv_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:drawableLeft="@mipmap/ic_editor"
                android:drawablePadding="4dp"
                android:drawableStart="@mipmap/ic_editor"
                android:gravity="center"
                android:text="@string/editor"
                android:textSize="12sp"
                app:left_height="16dp"
                app:left_width="16dp" />

            <com.markjin.artmall.view.TextViewPlus
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_delete"
                android:drawablePadding="4dp"
                android:drawableStart="@mipmap/ic_delete"
                android:gravity="center"
                android:text="@string/delete"
                android:textSize="12sp"
                android:visibility="visible"
                app:left_height="16dp"
                app:left_width="16dp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>