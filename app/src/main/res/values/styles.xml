<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:maxHeight">48dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:title">@null</item>
    </style>

    <style name="line_i">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/common_line_i</item>
        <item name="android:background">@color/color_e1</item>
    </style>

    <style name="line_i_dark">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/common_line_i</item>
        <item name="android:background">@color/color_e1</item>
    </style>

    <style name="line_b">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/common_line_b</item>
        <item name="android:background">@color/color_f4</item>
    </style>

    <style name="line_h">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/common_line_h</item>
        <item name="android:background">@color/color_f4</item>
    </style>

    <style name="commonAnimDialogStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="customDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="transDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="loadingDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ActivityTransparent" parent="@style/Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="cb_theme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_66</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>
